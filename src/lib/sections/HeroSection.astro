---
import HeroArtists from "@lib/components/hero/HeroArtists.astro";
import HeroBg from "@lib/components/hero/HeroBg.astro";
import PjLogo from "@lib/components/hero/PjLogo.astro";

import FireParticles from "@lib/components/particles/FireParticles.astro";

interface Props {
  language: Language;
  artistsData?: ArtistData[];
}

const { language = "et", artistsData } = Astro.props;

const ariaLabel = "Pühajärve jaanituli 2024";
---

<section class="bg-pj-blue relative">
  <HeroBg />

  <PjLogo {language} />

  <!-- <FireParticles /> -->

  <div class="flex flex-col items-center max-w-5xl pb-64 pr-6 pl-16 sm:mx-auto sm:px-14 lg:px-16 z-1">
    <!-- <Pj24Logo class="max-w-xl pt-2 lg:max-w-2xl opacity-95" {ariaLabel} /> -->

    {artistsData && artistsData.length && <HeroArtists {artistsData} />}
  </div>

  <!-- <GrainOverlay /> -->
</section>
