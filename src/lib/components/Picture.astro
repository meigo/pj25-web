---
interface Props {
  class?: string;
  data?: PictureData;
  sizes?: string;
  lazy?: boolean;
  priority?: boolean;
}

const { class: className, data, sizes = "100vw", lazy = false, priority = false } = Astro.props;
---

{
  data && (
    <picture>
      {data.sources.map((source) => (
        <source srcset={source.srcset} type={`image/${source.type}`} sizes={sizes} />
      ))}

      <img
        src={data.img.src}
        alt={data.img.alt}
        width={data.img.w}
        height={data.img.h}
        class={className}
        style={`aspect-ratio: ${data.img.w} / ${data.img.h};`}
        loading={lazy ? "lazy" : "eager"}
        decoding="async"
        fetchpriority={priority ? "high" : "auto"}
      />
    </picture>
  )
}
