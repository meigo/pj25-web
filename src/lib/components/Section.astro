---
import BubbleBorder from "@lib/svg/BubbleBorder.astro";
import GrainOverlay from "./GrainOverlay.astro";

interface Props {
  id?: string;
  color?: string;
  bubbleBorder?: boolean;
}

const { id = "", color = "black", bubbleBorder = true } = Astro.props;
---

<section {id} class="relative -mt-32">
  {bubbleBorder && <BubbleBorder class={`fill-${color}`} />}

  <div class={`pt-16 lg:pt-32 pb-32 lg:pb-48 bg-${color}`}>
    <slot />
  </div>

  <GrainOverlay />
</section>
