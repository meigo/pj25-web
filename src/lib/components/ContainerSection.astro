---
import Section from "@components/Section.astro";

interface Props {
  id?: string;
  color?: string;
  bubbleBorder?: boolean;
}

const { id = "", color = "black", bubbleBorder = true } = Astro.props;
---

<Section {id} {color} {bubbleBorder}>
  <div class="max-w-6xl pl-16 pr-4
          sm:px-14 sm:mx-auto
          lg:px-16">
    <slot />
  </div>
</Section>
