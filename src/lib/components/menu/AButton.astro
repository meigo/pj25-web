---
interface Props {
  class: string;
  href: string;
  ariaLabel: string;
  tabIndex?: string;
}

const { class: className, href, ariaLabel, tabIndex = "0" } = Astro.props;
---

<a {href} class="outline-none group" aria-label={ariaLabel} tabindex={tabIndex}>
  <div
    class=`flex group/slot items-center justify-center p-1 transition duration-250 rounded-full group-focus:bg-pj-cyan hover:bg-pj-cyan hover:scale-110 ${className}`>
    <slot />
  </div>
</a>

<style>
  /* FADE IN ON LOAD */
  a > div {
    opacity: 0;
    animation: fade-in 0.5s 0.25s ease-out forwards;
  }
</style>
