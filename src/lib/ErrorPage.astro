---
import "../app.css";
// import BgSky from "@lib/components/hero/BgSky.astro";
import GrainOverlay from "@lib/components/GrainOverlay.astro";

interface Props {
  language: Language;
}

const { language = "et" } = Astro.props;

const message = language === "et" ? "Lehte ei leitud." : "The page could not be found.";
const buttonLabel = language === "et" ? "Tagasi pealehele" : "Go back to Home";
---

<section class="fixed w-full h-full grad">
  <!-- <BgSky /> -->

  <div class="min-h-screen relative flex flex-grow items-center justify-center">
    <div class="text-center">
      <h1 class="text-8xl text-pj-blue font-bds">404</h1>
      <p class="text-pj-blue text-2xl">{message}</p>
      <a href="/" class="mt-4 inline-block rounded bg-pj-pink px-4 py-2 font-semibold text-pj-blue hover:text-white select-none uppercase">
        {buttonLabel}
      </a>
    </div>
  </div>

  <GrainOverlay />
</section>

<style lang="postcss" >
  .grad {
    /* background: radial-gradient(circle at center 0px, var(--colorStart) 20%, var(--colorEnd) 90%); */
    background: linear-gradient(to bottom, #92FFA1 20%, #00FFFF 90%);
  }
</style>
