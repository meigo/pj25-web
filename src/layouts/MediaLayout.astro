---
import { ClientRouter } from "astro:transitions";

import "/src/app.css";

interface Props {
  title?: string;
}

const { title = "" } = Astro.props;
---

<script>
  function init() {
    const backButton: HTMLButtonElement = document.querySelector("[data-back-button]");
    if (backButton) {
      const handleBack = () => {
        // If there is no history (direct navigation), go to home page
        // We check if referrer is from the same origin
        const isInternalNavigation = document.referrer && document.referrer.startsWith(window.location.origin);
        
        if (isInternalNavigation) {
          history.back();
        } else {
          // Fallback to home based on current path
          const isEn = window.location.pathname.startsWith('/en/') || window.location.pathname === '/en';
          window.location.href = isEn ? '/en' : '/';
        }
      };

      backButton.addEventListener("click", handleBack);

      backButton.addEventListener("keydown", (e: KeyboardEvent) => {
        if (e.key == "Escape" || e.key == "Enter") handleBack();
      });

      backButton.focus();
    }
  }

  // OUT
  document.addEventListener("astro:before-swap", () => {});

  // IN
  document.addEventListener("astro:after-swap", () => {
    init();
  });

  init();
</script>

<html lang="et">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, noarchive, nofollow" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="light only" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-black">
    <!-- FIREFOX! -->
    <script is:inline>
      0;
    </script>
    <slot />
  </body>
</html>
